.content{
  width: 490rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  /* 显示多行 */
  display:-webkit-box; 
  overflow:hidden; 
  /* 5为显示的行数 */
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #838383;
}
.card-item-img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  /* overflow: hidden; */
  background-image: url(https://citrons-1256634104.cos.ap-shanghai.myqcloud.com/wx/bg-ico.png);
  background-size: 100rpx auto;
  position: relative;
  display: inline-block;
  /* border: 1px solid #eaeaea; */
  border-radius: 50%;
}
.post-img{
  width: 100%;
  /* height: 100%; */
  /* max-height: 150rpx; */
  border-radius: 10rpx;
}
.card-item-statistics{
  width: 670rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  bottom: 10rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-tag{
  max-width: 400rpx;
  min-width: 100rpx;
  height: 45rpx;
  background-color: #a29bfe;
  border-radius: 20rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 0 20rpx;
}
.item-statistics{
  width: 350rpx;
  height: 50rpx;
  display: flex;
  font-size: 24rpx;
  line-height: 50rpx;
  justify-content: flex-end;
}
.item-words-numbers {
  width: 200rpx;
  height: 50rpx;
  color: #333333;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  /* align-items: center; */
  line-height: 50rpx;
  margin-right: 50rpx;
}
.item-watch{
  width: 100rpx;
  height: 50rpx;
  color: #333333;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  line-height: 50rpx;
}
.card-item-icon{
 font-size: 30rpx;
  color: #7A7A7A;
}

