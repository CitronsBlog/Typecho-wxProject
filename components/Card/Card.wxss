/* components/Card.wxss */
.card-item{
  width: 710rpx;
  height: 250rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-top: 20rpx;
}
.card-item-content{
  width: 680rpx;
  height: 220rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.card-item-post{
  width: 490rpx;
  /* width: 100%; */
  height: 180rpx;
}
.card-item-title{
  width: 490rpx;
  height: 50rpx;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
