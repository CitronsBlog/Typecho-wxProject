/* pages/login/login.wxss */
page{
  width: 750rpx;
  height: 100vh;
  position: relative;
}
.header{
  width: 750rpx;
  height: 350rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 0;
  box-shadow: 1px 1px 50rpx #c9c9c9;
}
.avatar-image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.login-post{
  width: 750rpx;
  margin-bottom: 80rpx;
}
.username{
  width: 490rpx;
  height: 88rpx;
  margin-left: 100rpx;
  margin-top: 140rpx;
  display: flex;
  border-radius: 88rpx;
  box-shadow: 1px 1px 10px #c9c9c9;
  position: relative;
  overflow: hidden;
  padding-left: 40rpx;
  /* font-size: 28rpx; */
  padding-right: 30rpx;
}
.password{
  display: flex;
  width: 490rpx;
  height: 88rpx;
  border-radius: 88rpx;
  box-shadow: 1px 1px 10px #c9c9c9;
  margin-left: 100rpx;
  margin-top: 60rpx;
  position: relative;
  padding-right: 30rpx;
  padding-left: 40rpx;
  overflow: hidden;
  /* font-size: 28rpx; */
}
.user-input{
  width: 490rpx;
  height: 88rpx;
  /* text-indent: 2em; */
  /* font-size: ; */
  overflow: hidden;
  margin-left: 50rpx;
}
.icon{
  display: block;
  font-size: 38rpx;
  position: absolute;
  line-height: 88rpx;
  text-align: center;
  width: 80rpx;
  height: 88rpx;
  left: 0;
  background-color: #ffffff;
  border-radius: 88rpx 0 0 88rpx;
  z-index: 999;
}

.login{
  width: 480rpx;
  margin-left: 135rpx;
  display: flex;
  /* justify-content: space-between; */
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
}
.forget{
  font-size: 28rpx;
  color: #7a7a7a;
  letter-spacing: 5rpx;
}
.login-btn{
  width: 300rpx;
  height: 80rpx;
  background-color: #4b6584;
  border-radius: 88rpx;
  color: #FFF;
  line-height: 80rpx;
  text-align: center;
  box-shadow: 1px 1px 20rpx #778ca3;
}


.bind{
  width: 750rpx;
  position: absolute;
  bottom: 60rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  color: #7a7a7a;
}
.bind-text{
  color: #45aaf2;
  padding-left: 10rpx;
  font-size: 24rpx;
}