/**pages/index.wxss**/


.header{
  width: 750rpx;
  /* height: 160rpx; */
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx dashed #b6b5b5;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.bottom{
  border-bottom: 1rpx dashed #b6b5b5;
}
.title{
  width: 710rpx;
  /* height: 88rpx; */
  font-size: 36rpx;
  color: #333;
  line-height: 1.5em;
  padding-left: 20rpx;
  word-wrap: break-word;
	white-space: normal;
	word-break: break-all;
}
.content-info{
  width: 750rpx;
  height: 50rpx;
  display: flex;
  font-size: 24rpx;
  /* justify-content: space-around; */
  color: #7A7A7A;
  padding-top: 10rpx;
}
.item{
  padding-left: 10rpx;
}
.post{
  padding: 30rpx;
  font-size: 28rpx;
  color: #5c5c5c;
}
.author{
  margin-left: 20rpx ;
}
.time,.viesw{
  margin-left: 40rpx;
}


.comment{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.post-comment{
  width: 710rpx;
  margin:  20rpx;
  position: relative;
  overflow: hidden;
}
.textarea{
  width: 670rpx;
  height: 200rpx;
  border: 1px solid  #4b6584;
  padding: 15rpx;
  border-radius: 10rpx;
  color: #333333;
  font-size: 28rpx;
}
.reply-btn{
  width: 160rpx;
  height: 66rpx;
  background-color: #4b6584;
  margin-right: 30rpx;
  margin-top: 20rpx;
  float: right;
  border-radius: 66rpx;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 66rpx;
  text-align: center;
}